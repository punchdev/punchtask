<h1>Get to work!</h1>
<br />

<table>
  <tr>
    <th>Week Tasks </th>
    <th></th>
    <th></th>
  </tr>

<% @lists.each do |list| %>
  <% if list.week %>
  <tr>
    <td><%= list.content %></td>
    <td><%= link_to raw('<i class="icon-ok"></i>'), complete_list_path(list.id), method: :put, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to raw('<i class="icon-remove"></i>'), list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
<% end %>
</table>

<br />

<table>
  <tr>
    <th>Day Tasks </th>
    <th></th>
    <th></th>
  </tr>

<% @lists.each do |list| %>
  <% unless list.complete? %>
